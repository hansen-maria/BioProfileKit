<script>
    document.addEventListener('DOMContentLoaded', function() {
        const itemsPerPage = {{ items_per_page }};
        const totalItems = {{ columns|length }};
        const totalPages = {{ total_pages }};
        let currentPage = 1;

        if (totalPages > 1) {
            generatePagination();
            updateDisplay();
        }

        function generatePagination() {
            const topPagination = document.getElementById('column-pagination');
            const bottomPagination = document.getElementById('column-pagination-bottom');

            [topPagination, bottomPagination].forEach(pagination => {
                if (!pagination) return; // Guard clause

                pagination.innerHTML = '';

                // First Button
                const firstLi = document.createElement('li');
                firstLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
                firstLi.innerHTML = `<a class="page-link" href="#" data-page="1" title="First Page">≪</a>`;
                pagination.appendChild(firstLi);

                // Previous Button
                const prevLi = document.createElement('li');
                prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
                prevLi.innerHTML = `<a class="page-link" href="#" data-page="${currentPage - 1}" title="Previous Page">&lt;</a>`;
                pagination.appendChild(prevLi);

                // Page Numbers
                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, startPage + 4);

                if (endPage - startPage < 4) {
                    startPage = Math.max(1, endPage - 4);
                }

                // First page + ellipsis
                if (startPage > 1) {
                    if (startPage > 2) {
                        const ellipsisLi = document.createElement('li');
                        ellipsisLi.className = 'page-item disabled';
                        ellipsisLi.innerHTML = '<span class="page-link">...</span>';
                        pagination.appendChild(ellipsisLi);
                    }
                }

                // Page numbers
                for (let i = startPage; i <= endPage; i++) {
                    const li = document.createElement('li');
                    li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                    li.innerHTML = `<a class="page-link" href="#" data-page="${i}">${i}</a>`;
                    pagination.appendChild(li);
                }

                // Last page + ellipsis
                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) {
                        const ellipsisLi = document.createElement('li');
                        ellipsisLi.className = 'page-item disabled';
                        ellipsisLi.innerHTML = '<span class="page-link">...</span>';
                        pagination.appendChild(ellipsisLi);
                    }
                }

                // Next Button
                const nextLi = document.createElement('li');
                nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
                nextLi.innerHTML = `<a class="page-link" href="#" data-page="${currentPage + 1}" title="Next Page">&gt;</a>`;
                pagination.appendChild(nextLi);

                // Last Button
                const lastLi = document.createElement('li');
                lastLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
                lastLi.innerHTML = `<a class="page-link" href="#" data-page="${totalPages}" title="Last Page">≫</a>`;
                pagination.appendChild(lastLi);
            });

            [topPagination, bottomPagination].forEach(pagination => {
                if (!pagination) return;

                pagination.addEventListener('click', function(e) {
                    e.preventDefault();
                    const page = parseInt(e.target.dataset.page);
                    if (page && page !== currentPage && page >= 1 && page <= totalPages) {
                        currentPage = page;
                        updateDisplay();
                        generatePagination();

                        // Scroll to top
                        document.getElementById('columns-container').scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });
        }

        function updateDisplay() {
            const columnItems = document.querySelectorAll('.column-item');
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;

            columnItems.forEach((item, index) => {
                if (index >= startIndex && index < endIndex) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                    // Collapse any open toggles on hidden pages
                    const collapseElement = item.querySelector('.collapse');
                    if (collapseElement && collapseElement.classList.contains('show')) {
                        const bsCollapse = new bootstrap.Collapse(collapseElement, {
                            toggle: false
                        });
                        bsCollapse.hide();
                    }
                }
            });

            // Update range display
            const currentRangeEl = document.getElementById('current-range');
            const currentPageInfoEl = document.getElementById('current-page-info');

            if (currentRangeEl) {
                const start = startIndex + 1;
                const end = Math.min(endIndex, totalItems);
                currentRangeEl.textContent = `${start}-${end}`;
            }

            if (currentPageInfoEl) {
                currentPageInfoEl.textContent = currentPage;
            }
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.target.tagName.toLowerCase() === 'input' || e.target.tagName.toLowerCase() === 'textarea') {
                return;
            }

            if (e.key === 'ArrowLeft' && currentPage > 1) {
                e.preventDefault();
                currentPage--;
                updateDisplay();
                generatePagination();
            } else if (e.key === 'ArrowRight' && currentPage < totalPages) {
                e.preventDefault();
                currentPage++;
                updateDisplay();
                generatePagination();
            }
        });

        document.addEventListener('click', function(e) {
            if (e.target.matches('a.cb-pink-link')) {
                e.preventDefault();
                const targetId = e.target.getAttribute('href').substring(1);
                const targetEl = document.getElementById(targetId);

                if (targetEl) {
                    const columnItem = targetEl.closest('.column-item');
                    if (columnItem) {
                        const columnItems = Array.from(document.querySelectorAll('.column-item'));
                        const targetIndex = columnItems.indexOf(columnItem);

                        if (targetIndex !== -1) {
                            const targetPage = Math.floor(targetIndex / itemsPerPage) + 1;

                            if (targetPage !== currentPage) {
                                currentPage = targetPage;
                                updateDisplay();
                                generatePagination();
                            }

                            setTimeout(() => {
                                if (!targetEl.classList.contains('show')) {
                                    new bootstrap.Collapse(targetEl, { toggle: true });
                                }

                                setTimeout(() => {
                                    targetEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
                                }, 300);
                            }, 100);
                        }
                    }
                }
            }
        });
    });

    document.getElementById('collapseAllBtn').addEventListener('click', () => {
        document.querySelectorAll('.column-item[style*="block"] .multi-collapse').forEach(el => {
            bootstrap.Collapse.getOrCreateInstance(el).hide();
        });
    });

    document.getElementById('expandAllBtn').addEventListener('click', () => {
        document.querySelectorAll('.column-item[style*="block"] .multi-collapse').forEach(el => {
            bootstrap.Collapse.getOrCreateInstance(el).show();
        });
    });
</script>
